extends ../../layouts/default.pug  


block main 
    h1(class="mb-4") Thêm danh mục tour vào hệ thống 
    form(
        action=`/${prefixAdmin}/categories/create`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tên danh mục
            input(
                type="input"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            label(for="image") Chọn ảnh
            input(
                type="file"
                class="form-control-file"
                id="image"
                name="image"
                accept="image/*"
            )     
        div(class="form-group")
            label(for="information") Mô tả 
            textarea(
                class="form-control"
                id="description"
                name="description"
                textarea-mce
            )
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
            )
            label(for="statusInActive") Dừng Hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Thêm mới 
    